<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f3"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        tools:context=".CodeAuthActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imghexagon"
                    android:layout_width="140dp"
                    android:layout_height="212dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="right"
                    android:src="@drawable/hexagone1" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="120dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/hexagone2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingTop="125dp"
                    android:layout_marginLeft="36dp"
                    android:layout_marginBottom="90dp"
                    android:orientation="vertical">

                    <!--    <ImageView-->
                    <!--        android:id="@+id/bookIconImageView"-->
                    <!--        android:layout_width="222dp"-->
                    <!--        android:layout_height="146dp"-->
                    <!--        android:layout_centerInParent="true"-->
                    <!--        android:contentDescription="@null"-->
                    <!--        android:src="@drawable/utswhitelogo" />-->

                    <TextView
                        android:id="@+id/tv_code_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/enter_code"
                        android:layout_gravity="left"
                        android:textColor="#ffffff"
                        android:textSize="31.3sp" />



                    <EditText
                        android:id="@+id/et_code"
                        android:ems="20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                         android:textSize="31.3sp"
                        android:textColor="#ffffff"
                        android:textColorHint="#FFFFFF"
                        android:inputType="number"
                        android:textCursorDrawable="@drawable/white_cursor_color"
                        android:layout_gravity="left"
                        android:maxLines="1"
                        android:layout_marginTop="18dp"
                        android:background="@android:color/transparent"
                        />

                    <View
                        android:layout_width="263.7dp"
                        android:layout_height="1dp"
                        android:layout_gravity="left"
                        android:layout_marginTop="6.3dp"
                        android:background="#ffffff"/>


                    <FrameLayout
                        android:id="@+id/btn_code_submit"
                        android:layout_width="66dp"
                        android:layout_height="66dp"

                        android:layout_gravity="right"
                        android:layout_marginTop="17.3dp"
                        android:background="@drawable/white_hexagone">
                        <!--                    android:layout_gravity="bottom|right"-->
                        <ImageView
                            android:id="@+id/arrow"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center"
                            android:src="@drawable/right_arrow" />


                    </FrameLayout>

                </LinearLayout>



            </FrameLayout>





        </LinearLayout>


    </LinearLayout>

